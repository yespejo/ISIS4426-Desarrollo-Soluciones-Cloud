<div class="container p-4">
    <div class="row">
         <div class="col-md-4 mx-auto">
             <div class="card">
               <div class="card-body">
                  <form action="/links/add" method="POST" enctype="multipart/form-data">
                         <div class="form-group">
                                
                             <input type="text" class="form-control" name="name" placeholder="nombre de concurso" autofocus>
                         </div>
                      <div class="form-group">
                          <input type="text" name="url" class="form-control" placeholder="url">
                      </div>
                     <div class="form-group">
                           Fecha Inicial
                          <input type="date" id="inicial" name="startdate">
                      </div>
                      <div class="form-group">
                           Fecha Final
                          <input type="date" id="final" name="enddate">
                      </div>
                      <div class="form-group">
                          <textarea name="description" rows="2" class="form-control" placeholder="Descripcion premio"></textarea>
                      </div>
                       <div class="form-group">
                           Banner
                           <input type="file" id="file" name="image">
                      </div>
                      <div class="form-group">
                          <button class="btn btn-success btn-block">
                              SAVE
                          </button>
                      </div>
                  </form>
                 </div> 
             </div>
         </div>
    </div>
</div>