<div class="container p-4">
    <div class="row">
        {{#each links}}
           <div class="col-md-3">
               <div class="card-body">
                 <a href="/videos/{{url}}" target="_blank">
                     <h3 class="card-title text-uppercase">
                          {{name}}
                     </h3>
                 </a>
                 <img src="/uploads/{{id}}/{{image}}" alt="Banner" class="card-img-top mx-auto m-2 rounded-circle w-50">
                 <p class="m-2">El premio es {{description}}</p>
                 <p>{{timeago currentdate}}</p>
                 <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar</a>
                 <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
               </div>
           </div>
        {{else}}
           <div class="col-md-4 mx auto">
               <div class="card card-body text-center">
                 <p>no hay concursos creados</p>
                 <a href="/links/add">Crea un concurso</a>
               </text-center>
           </div>
        {{/each}}
    </div>
</div>
